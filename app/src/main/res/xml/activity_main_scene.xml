<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300"
        motion:motionInterpolator="easeInOut">
        <OnClick motion:targetId="@id/showImageView" />
    </Transition>

    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@id/TemplateShowEnd"
        motion:duration="200"
        motion:motionInterpolator="easeInOut">
        <OnClick motion:targetId="@id/closeImageUpdateImageView" />
    </Transition>

    <Transition
        motion:constraintSetStart="@id/end"
        motion:constraintSetEnd="@id/TemplateNotShowEnd"
        motion:duration="200"
        motion:motionInterpolator="easeInOut">
        <OnClick motion:targetId="@id/closeImageUpdateImageView" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/templateGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/bottomTabLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/closeImageView"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toTopOf="@id/templateGroup"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/showImageView"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="@id/templateGroup"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/imageUpdateGroup"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="218dp"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/templateGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:alpha="0"
            android:translationY="160dp"
            motion:layout_constraintBottom_toTopOf="@+id/bottomTabLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/closeImageView"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:translationY="160dp"
            motion:layout_constraintBottom_toTopOf="@id/templateGroup"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/showImageView"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:alpha="255"
            android:translationY="160dp"
            motion:layout_constraintBottom_toTopOf="@id/templateGroup"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/imageUpdateGroup"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="218dp"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/TemplateShowEnd">
        <Constraint
            android:id="@+id/imageUpdateGroup"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="0dp"
            android:alpha="255" />
        <Constraint
            android:id="@+id/templateGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/bottomTabLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/closeImageView"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toTopOf="@id/templateGroup"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/showImageView"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toTopOf="@id/templateGroup"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/TemplateNotShowEnd">
        <Constraint
            android:id="@+id/imageUpdateGroup"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="0dp"
            android:alpha="255" />
        <Constraint
            android:id="@+id/templateGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:alpha="0"
            android:translationY="160dp"
            motion:layout_constraintBottom_toTopOf="@+id/bottomTabLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/closeImageView"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:translationY="160dp"
            motion:layout_constraintBottom_toTopOf="@id/templateGroup"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/showImageView"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:translationY="160dp"
            motion:layout_constraintBottom_toTopOf="@id/templateGroup"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>
</MotionScene>